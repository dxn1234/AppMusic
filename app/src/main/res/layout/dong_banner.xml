<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/mot"
        android:scaleType="fitXY"
        android:id="@+id/img_bannerbackground"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <RelativeLayout
        android:layout_alignBottom="@+id/img_bannerbackground"
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/hai"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_banner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:id="@+id/txt_titlebannerbaihat"
            android:layout_toRightOf="@+id/img_banner"
            android:layout_alignTop="@+id/img_banner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/txt_titlebannerbaihat"
            android:layout_below="@+id/txt_titlebannerbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_noidung"
                android:textColor="@android:color/white"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>