<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:text="Thế Giới Âm Nhạc"
        android:id="@+id/txt_titleplaylist"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_playlist"
        android:layout_below="@+id/txt_titleplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:text="Xem thêm PlayLists"
        android:textSize="19sp"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:id="@+id/txt_viewmoreplaylist"
        android:layout_below="@+id/lv_playlist"
        android:background="@android:color/darker_gray"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>